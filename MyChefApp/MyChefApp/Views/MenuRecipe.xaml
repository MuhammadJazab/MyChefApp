<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MyChefApp.Views.MenuRecipe"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="main">
    <ContentPage.Content>
        <Grid
            ColumnSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            <StackLayout
                Grid.Column="0"
                Margin="10,50"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="CenterAndExpand">
                <StackLayout
                    Orientation="Horizontal">
                    <StackLayout
                        Spacing="0"
                        HorizontalOptions="EndAndExpand"
                        Orientation="Vertical">
                        <Label 
                            TextColor="{DynamicResource Yellow}"
                            FontSize="50"
                            FontFamily="Samantha"
                            Text="Eat."/>
                        <Label 
                            TextColor="{DynamicResource Yellow}"
                            FontSize="50"
                            FontFamily="Samantha"
                            Text="In."/>
                    </StackLayout>
                    <Frame
                        VerticalOptions="Center"
                        HorizontalOptions="EndAndExpand"
                        CornerRadius="30"
                        Padding="5"
                        Margin="5"
                        BackgroundColor="Gray">
                        <Label
                            HorizontalTextAlignment="Center"
                            HorizontalOptions="EndAndExpand"
                            FontSize="30"
                            FontFamily="Samantha"
                            TextColor="{DynamicResource Yellow}"
                            Text="XP Level: Seasoned Cook"/>
                    </Frame>
                </StackLayout>
                <StackLayout
                    Spacing="10"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Vertical">
                    <Label 
                        HorizontalTextAlignment="Center"
                        TextColor="White"
                        FontFamily="Samantha"
                        FontSize="55"
                        Text="Monday"/>
                    <Frame
                        BackgroundColor="White"
                        Padding="5"
                        CornerRadius="30">
                        <Label
                            HorizontalTextAlignment="Center"
                            FontAttributes="Bold"
                            FontSize="30"
                            FontFamily="Samantha"
                            Text="Chicken Marsala W/ Roasted Asparagus &amp; Carrots"/>
                    </Frame>
                    <Label
                        Margin="0,20"
                        HorizontalTextAlignment="Center"
                        TextColor="{DynamicResource Yellow}"
                        FontSize="40"
                        FontFamily="Samantha"
                        FontAttributes="Bold"
                        Text="Step 1-3"/>
                    <Frame
                        CornerRadius="40"
                        Margin="10"
                        Padding="10">
                        <Label 
                            FontFamily="Samantha"
                            FontAttributes="Bold"
                            FontSize="30"
                            HorizontalTextAlignment="Center"
                            Text="Step1: Example steps to make recipy
                            Example steps to make recipy
                            Step 2: Example steps to make recipy
                            Example steps to make recipy
                            Example steps to make recipy"/>
                    </Frame>
                </StackLayout>
            </StackLayout>
            <StackLayout
                BackgroundColor="{DynamicResource SlatBlack}"
                Grid.Column="1"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                Spacing="10">
                <StackLayout
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand">
                    <Label 
                        FontSize="Large"
                        TextColor="White"
                        Text="Ingredients"/>
                    <!--replace it with list of ingredients-->
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                </StackLayout>
                <StackLayout
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand">
                    <Label 
                        FontSize="Large"
                        TextColor="White"
                        Text="Directions"/>
                    <!--replace it with Directions-->
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                    <Label 
                        TextColor="White"
                        Text="Ingredients"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>